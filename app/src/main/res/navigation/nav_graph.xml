<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.coe.project.codeit.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_FirstFragment_to_codingFragment"
            app:destination="@id/codingFragment" />
    </fragment>

    <fragment
        android:id="@+id/codingFragment"
        android:name="com.coe.project.codeit.CodingFragment"
        android:label="CodingPage"
        tools:layout="@layout/CodingPage" >
        <action
            android:id="@+id/action_codingFragment_to_showProjectFragment"
            app:destination="@id/showProjectFragment" />
    </fragment>

    <fragment
        android:id="@+id/showProjectFragment"
        android:name="com.coe.project.codeit.ShowProjectFragment"
        android:label="ShowProjectPage"
        tools:layout="@layout/ShowProjectPage" >
        <action
            android:id="@+id/action_showProjectFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>

</navigation>
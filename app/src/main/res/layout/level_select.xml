<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/text_logo"
        android:layout_width="381dp"
        android:layout_height="261dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/text_logo" />

    <ImageButton
        android:id="@+id/level1_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="144dp"
        android:scaleType="fitCenter"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/level1" />

    <ImageButton
        android:id="@+id/level2_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="144dp"
        android:scaleType="fitCenter"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@+id/level1_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/level2" />

    <ImageButton
        android:id="@+id/level3_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="144dp"
        android:scaleType="fitCenter"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@+id/level2_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/level3" />

    <ImageButton
        android:id="@+id/level4_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="144dp"
        android:scaleType="fitCenter"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@+id/level3_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/level4" />

    <ImageButton
        android:id="@+id/level5_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="144dp"
        android:scaleType="fitCenter"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toEndOf="@+id/level4_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/level5" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044"
        app:srcCompat="@drawable/back" />

</androidx.constraintlayout.widget.ConstraintLayout>